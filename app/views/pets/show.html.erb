 <h2><%= @pet.name %></h2>
  <p>Age: <%= @pet.age %></p>
  <p>Breed: <%= @pet.breed %></p>
  <p>Adoptable: <%= @pet.adoptable %></p>
  <p>You can find <%= @pet.name %> at <%= @pet.shelter_name %>!</p>

<p><%= link_to "Update #{@pet.name}", "pets/#{@pet.id}/edit" %></p>
<p><%= link_to "Delete #{@pet.name}", "/pets/#{@pet.id}", method: :delete %></p>
