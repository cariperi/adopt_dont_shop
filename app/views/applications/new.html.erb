<h1>New Application</h1>
<%= form_with url: "/applications", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>

  <%= f.label :street_address, "Street Address" %>
  <%= f.text_field :street_address, required: true %>

  <%= f.label :city %>
  <%= f.text_field :city, required: true %>
 
  <%= f.label :state %>
  <%= f.text_field :state, required: true %>
 
  <%= f.label :zipcode %>
  <%= f.text_field :zipcode, required: true %>

  <%= f.submit "Create Application" %>
<% end %>