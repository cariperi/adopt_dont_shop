<h1>Application for <%= @application.name %></h1>

<h3>Name:</h3> <%= @application.name %>
<h3>Address:</h3> <p><%= @application.street_address %> <%= @application.city %>, <%= @application.state %> <%= @application.zipcode %></p>
<h3>Why should pets go to your house?</h3> <%= @application.description %>
<h3>Status:</h3> <%= @application.status %>

<h3>Pets In This Application:</h3>
<% @pets.each do |pet| %>
  <%= link_to pet.name, "/pets/#{pet.id}" %>
<% end %>

<% if @application.status == 'In Progress' %>
  <h2>Add a Pet to this Application:</h2>

  <%= form_with url: "/applications/#{@application.id}", local: true, method: :get do |form| %>
    <%= form.label :search, "Search for Pets by Name:" %>
    <%= form.text_field :search %>
    <%= form.submit "Submit" %>
  <% end %>

    <% if params[:search] && !@found_pets.empty? %>
      <h3>Results</h3>
      <% @found_pets.each do |found_pet| %>
        <%= link_to found_pet.name, "/pets/#{found_pet.id}" %>
      <% end %>
    <% elsif params[:search] %>
      <p>No pets match this search.</p>
    <% end %>
<% end %>
